from pymongo import Connection
from pymongo import ReadPreference

settings_host = '127.0.0.1'
settings_port = 27017
settings_db = 'mydb'
settings_user = ''
settings_password = ''
settings_collection = 'things'
settings_fields = {'totalIndexSize': 'index', 'storageSize': 'storage', 'size': 'data'}


def getCollstats():
	con = Connection(settings_host, int(settings_port), read_preference=ReadPreference.SECONDARY)

        if settings_user:
                db = con['admin']
                db.authenticate(settings_user, settings_password)

	db = con[settings_db]

	stats = db.command("collstats", settings_collection)
        for k, v in stats.iteritems():
        	if not k in settings_fields:
		        continue
	        yield (settings_fields[k].replace('.', '_'), long(v),)

	con.disconnect()


def doData():
	for coll, stats in getCollstats():
		print "%s.value %s" % (coll, stats)


def doConfig():

    print "graph_title MongoDB %s collection size" % settings_collection 
    print "graph_args --base 1024 -l 0"
    print "graph_vlabel Kb"
    print "graph_category MongoDB"

    for k,v in getCollstats():
        print "%s.label %s" % (k, k)
        print "%s.min 0" % k
        print "%s.draw LINE1" % k


if __name__ == "__main__":
    from sys import argv
    from os import environ

    # Could be done by a for loop 
    # but i think if's are faster
    if 'HOST' in environ:
	settings_host = environ['HOST']
    if 'PORT' in environ:
	settings_port = environ['PORT']
    if 'DB' in environ:
        settings_db = environ['DB']
    if 'USER' in environ:
        settings_user = environ['USER']
    if 'PASSWORD' in environ:
        settings_password = environ['PASSWORD']



    sp = argv[0].split('_')
    if len(sp) > 1:
	settings_collection = sp[-1]

    if len(argv) > 1 and argv[1] == "config":
        doConfig()
    else:
        doData()
